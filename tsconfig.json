{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "src": ["src/"],
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist", "node_modules", "reports"]
}
